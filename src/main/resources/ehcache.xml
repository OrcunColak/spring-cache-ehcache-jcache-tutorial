<ehcache:config
        xmlns:ehcache="http://www.ehcache.org/v3"
        xmlns:jcache="http://www.ehcache.org/v3/jsr107">

    <ehcache:service>
        <jcache:defaults enable-management="false" enable-statistics="false" />
    </ehcache:service>

    <ehcache:cache alias="employees" uses-template="template-config-cache" />

    <!-- the config cache template -->
    <ehcache:cache-template name="template-config-cache">
        <expiry>
            <ttl unit="hours">1</ttl>
        </expiry>
        <resources>
            <heap unit="entries">2000</heap>
        </resources>
    </ehcache:cache-template>

</ehcache:config>